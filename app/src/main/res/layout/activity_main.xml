<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="1058dp"
            android:layout_height="702dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="711dp">






            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Custom"
                    android:textColor="#FF9800"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="878dp"
                    tools:layout_editor_absoluteY="741dp" />

            </LinearLayout>




            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red"
                tools:layout_editor_absoluteX="104dp"
                tools:layout_editor_absoluteY="741dp" />

            <SeekBar
                android:id="@+id/redSeekBar"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="0"
                tools:layout_editor_absoluteX="230dp"
                tools:layout_editor_absoluteY="742dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Green"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="702dp" />

            <SeekBar
                android:id="@+id/greenSeekBar"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:min="0"
                tools:layout_editor_absoluteX="230dp"
                tools:layout_editor_absoluteY="742dp" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue" />

            <SeekBar
                android:id="@+id/blueSeekBar"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:max="255"
                android:progress="0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="712dp" />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>



